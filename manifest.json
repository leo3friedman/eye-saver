{
  "name": "Eye Saver",
  "version": "0.3",
  "description":"Reminds you to look away from the screen at customizable intervals",
  "permissions": ["storage","alarms","notifications"],
  "background": {
    "scripts": ["timer.js","background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "css": ["overlay.css","templates/clock.css"],
      "js": ["overlay.js","templates/clock.js","timer.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "IMGs/16icon.png",
      "32": "IMGs/32icon.png",
      "48": "IMGs/64icon.png",
      "128": "IMGs/128icon.png"
    }
  },
  "web_accessible_resources": ["templates/*","sounds/look_away_sound.wav"],
  "icons": {
    "16": "IMGs/16icon.png",
    "32": "IMGs/32icon.png",
    "48": "IMGs/64icon.png",
    "128": "IMGs/128icon.png"
  },

  "manifest_version": 2
}