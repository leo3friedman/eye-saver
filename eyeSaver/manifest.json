{
  "name": "Eye Saver - 20-20-20 Break Reminder",
  "version": "0.6",
  "description": "Eye Saver helps remind you to look away from the screen to prevent eye strain.",
  "permissions": ["storage", "alarms", "notifications", "tabs"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["content_script.js", "overlay.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "templates/*",
        "sounds/look_away_sound.wav",
        "fonts/Roboto/*.ttf",
        "enums.js",
        "eyeSaver.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "IMGs/16icon.png",
    "32": "IMGs/32icon.png",
    "48": "IMGs/64icon.png",
    "128": "IMGs/128icon.png"
  },

  "manifest_version": 3
}
